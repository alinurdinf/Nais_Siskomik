<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/rootRL"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="280dp"
        android:background="@drawable/wall_home"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="384dp"
            android:layout_height="92dp"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="0dp"
            android:layout_marginTop="30dp"
            android:layout_marginRight="20dp"
            android:gravity="center"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/imageView5"
                android:layout_width="94dp"
                android:layout_height="45dp"
                android:layout_weight="1"
                app:srcCompat="@drawable/logo" />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="left"
                android:layout_marginRight="18dp"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/nama_mahasiswa"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="20dp"
                    android:layout_marginBottom="8dp"
                    android:text=""
                    android:textColor="#ffffff"
                    android:textSize="16sp" />

                <TextView
                    android:id="@+id/username"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="12dp"
                    android:gravity="right"
                    android:text=""
                    android:textColor="#ffffff"
                    android:textSize="16sp" />

            </LinearLayout>

            <de.hdodenhof.circleimageview.CircleImageView
                android:id="@+id/myPict"
                android:layout_width="79dp"
                android:layout_height="63dp"
                android:layout_marginRight="12dp"
                android:src="@drawable/upstream" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="28dp"
            android:layout_marginTop="65dp"
            android:layout_marginRight="28dp"
            android:background="@drawable/card"
            android:orientation="vertical"
            android:padding="12dp"
            android:paddingTop="12dp"
            android:paddingBottom="12dp">

            <TextView
                android:id="@+id/textView12"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Total SKS : 88"

                />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginTop="4dp"
                android:layout_marginBottom="4dp"
                android:gravity="center"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/textView13"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="3,88" />

                <TextView
                    android:id="@+id/program_studi"
                    android:layout_width="140dp"
                    android:layout_height="25dp"
                    android:layout_weight="1"
                    android:background="@drawable/borderprodi"
                    android:gravity="center"
                    android:text=""
                    android:textColor="#47B241" />
            </LinearLayout>

            <TextView
                android:id="@+id/textView14"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="IP Kumulatif" />

        </LinearLayout>

    </LinearLayout>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical" >
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="300dp"
                android:orientation="vertical">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/jadwal"
                        android:layout_width="120dp"
                        android:layout_height="120dp"
                        android:layout_marginLeft="28dp"
                        android:background="@drawable/videos" />

                    <TextView
                        android:id="@+id/grafikips"
                        android:layout_width="120dp"
                        android:layout_height="120dp"

                        android:background="@drawable/grafik" />

                    <TextView
                        android:id="@+id/nilai"
                        android:layout_width="120dp"
                        android:layout_height="120dp"
                        android:background="@drawable/nilai" />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/pembayaran"
                        android:layout_width="120dp"
                        android:layout_height="120dp"
                        android:layout_marginLeft="28dp"
                        android:background="@drawable/pembayaran" />

                    <TextView
                        android:id="@+id/materi"
                        android:layout_width="120dp"
                        android:layout_height="120dp"

                        android:background="@drawable/materi" />

                    <TextView
                        android:id="@+id/absensi"
                        android:layout_width="120dp"
                        android:layout_height="120dp"
                        android:background="@drawable/absensi" />

                </LinearLayout>


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/kuesioner"
                        android:layout_width="120dp"
                        android:layout_height="120dp"
                        android:layout_marginLeft="28dp"
                        android:background="@drawable/kuisioner" />

                    <TextView
                        android:id="@+id/info"
                        android:layout_width="120dp"
                        android:layout_height="120dp"
                        android:background="@drawable/info" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="369dp"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="24dp"
                    android:layout_marginTop="40dp"
                    android:orientation="vertical">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                        <TextView
                            android:id="@+id/news"
                            android:layout_width="325dp"
                            android:layout_height="wrap_content"
                            android:text="News"
                            android:textColor="@color/black"
                            android:textSize="14dp"
                            android:textStyle="bold" />

                        <TextView
                            android:id="@+id/seeAll2"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="See all"
                            android:textColor="#108EE9"
                            android:textSize="14dp" />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="369dp"
                        android:layout_height="116dp"
                        android:layout_marginTop="20dp"
                        android:background="@drawable/border3"
                        android:backgroundTint="@color/white"
                        android:orientation="vertical">

                        <LinearLayout
                            android:layout_width="362dp"
                            android:layout_height="105dp"
                            android:background="@drawable/card"
                            android:orientation="vertical">

                            <LinearLayout
                                android:layout_width="328dp"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center"
                                android:layout_marginTop="18dp"
                                android:layout_marginBottom="18dp"
                                android:orientation="horizontal">

                                <ImageView
                                    android:id="@+id/foto_berita"
                                    android:layout_width="69dp"
                                    android:layout_height="69dp"
                                    android:background="@drawable/news" />

                                <LinearLayout
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_marginLeft="10dp"
                                    android:orientation="vertical">

                                    <LinearLayout
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:orientation="horizontal">

                                        <LinearLayout
                                            android:layout_width="231dp"
                                            android:layout_height="wrap_content"
                                            android:orientation="horizontal">

                                            <TextView
                                                android:id="@+id/nama_penulis"
                                                android:layout_width="wrap_content"
                                                android:layout_height="wrap_content"
                                                android:paddingEnd="8dp"
                                                android:text="Robert Fox"
                                                android:textColor="#595959"
                                                android:textSize="12dp" />

                                            <ImageView
                                                android:id="@+id/pemisah"
                                                android:layout_width="4dp"
                                                android:layout_height="4dp"
                                                android:layout_gravity="center"
                                                android:background="@drawable/circle"
                                                android:backgroundTint="#595959"/>

                                            <TextView
                                                android:id="@+id/jam_rilis"
                                                android:layout_width="wrap_content"
                                                android:layout_height="wrap_content"
                                                android:text="8h"
                                                android:paddingStart="8dp"
                                                android:textColor="#595959"
                                                android:textSize="12dp" />
                                        </LinearLayout>

                                        <LinearLayout
                                            android:layout_width="wrap_content"
                                            android:layout_height="wrap_content"
                                            android:layout_gravity="center">

                                            <ImageView
                                                android:id="@+id/lainnya"
                                                android:layout_width="16dp"
                                                android:layout_height="4dp"
                                                android:layout_gravity="center"
                                                android:background="@drawable/other"
                                                android:paddingStart="10dp" />

                                        </LinearLayout>
                                    </LinearLayout>

                                    <TextView
                                        android:id="@+id/dosen2"
                                        android:layout_width="match_parent"
                                        android:layout_height="wrap_content"
                                        android:layout_marginTop="8dp"
                                        android:gravity="left"
                                        android:text="A Foundation Programme For University and Beyond"
                                        android:textColor="#303030"
                                        android:textSize="12dp" />
                                </LinearLayout>
                            </LinearLayout>
                        </LinearLayout>
                    </LinearLayout>
                </LinearLayout>
            </LinearLayout>
        </LinearLayout>
    </ScrollView>

</RelativeLayout>