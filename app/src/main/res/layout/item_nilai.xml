<?xml version="1.0" encoding="utf-8"?>
<FrameLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingBottom="5dp"
    >
    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@android:color/white"
        >

        <LinearLayout
            android:layout_width="362dp"
            android:layout_height="116dp"
            android:layout_gravity="center"
            android:background="@drawable/border3"
            android:backgroundTint="@color/white"
            android:orientation="vertical"
            tools:ignore="MissingConstraints">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_gravity="center"
                android:layout_marginTop="20dp"
                android:background="@drawable/card"
                android:orientation="vertical">


                <LinearLayout
                    android:layout_width="362dp"
                    android:layout_height="match_parent"
                    android:layout_gravity="center"
                    android:gravity="center"
                    android:orientation="vertical">

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:gravity="center"
                        android:orientation="horizontal">

                        <TextView
                            android:id="@+id/nama_matkul"
                            android:layout_width="295dp"
                            android:layout_height="24dp"
                            android:gravity="left"
                            android:text="Manajemen Proyek Sistem Informasi"
                            android:textColor="#1C1C1C"
                            android:textSize="14dp"
                            android:textStyle="bold" />

                        <TextView
                            android:id="@+id/nilaiMatkul"
                            android:layout_width="24dp"
                            android:layout_height="24dp"
                            android:background="@drawable/border4"
                            android:gravity="center"
                            android:text="A"
                            android:textColor="#FFFFFF"
                            android:textSize="14dp"
                            android:textStyle="bold" />
                    </LinearLayout>


                    <LinearLayout
                        android:layout_width="317dp"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_marginTop="10dp"
                        android:orientation="horizontal">

                        <TextView
                            android:id="@+id/semester"
                            android:layout_width="85dp"
                            android:layout_height="wrap_content"
                            android:gravity="left"
                            android:text="Ganjil"
                            android:textColor="#DE1C1C1C"
                            android:textSize="12dp"
                            android:textStyle="bold" />

                        <TextView
                            android:id="@+id/sks"
                            android:layout_width="231dp"
                            android:layout_height="wrap_content"
                            android:gravity="right"
                            android:text="2 SKS"
                            android:textColor="#555555"
                            android:textSize="12dp"
                            android:textStyle="bold" />

                    </LinearLayout>

                </LinearLayout>
            </LinearLayout>

            <LinearLayout
                android:layout_width="362dp"
                android:layout_height="match_parent"
                android:layout_gravity="center"
                android:gravity="center"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:gravity="center"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/title"
                        android:layout_width="232dp"
                        android:layout_height="36dp"
                        android:layout_marginLeft="0dp"
                        android:layout_marginTop="8dp"
                        android:layout_marginRight="42dp"
                        android:text="Knowledge Representation"
                        android:textColor="#1C1C1C"
                        android:textSize="14dp"
                        android:textStyle="bold" />

                    <TextView
                        android:id="@+id/id"
                        android:layout_width="24dp"
                        android:layout_height="24dp"
                        android:layout_marginTop="8dp"
                        android:background="@drawable/border4"
                        android:gravity="center"
                        android:text="1"
                        android:textColor="#FFFFFF"
                        android:textSize="14dp"
                        android:textStyle="bold" />
                </LinearLayout>

                <TextView
                    android:id="@+id/dosen"
                    android:layout_width="288dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginRight="5dp"
                    android:gravity="left"
                    android:text="Muchamad Taufiq Anwar"
                    android:textColor="#DE555555"
                    android:textSize="12dp" />

                <TextView
                    android:id="@+id/link"
                    android:layout_width="22dp"
                    android:layout_height="22dp"
                    android:layout_gravity="right"
                    android:layout_marginRight="32dp"
                    android:background="@drawable/download"
                    android:gravity="right"
                    android:textColor="#DE555555"
                    android:textSize="12dp" />


            </LinearLayout>
        </LinearLayout>
    </androidx.constraintlayout.widget.ConstraintLayout>
</FrameLayout>