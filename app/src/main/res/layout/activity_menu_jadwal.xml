<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".MenuJadwal">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="34dp"
        android:layout_marginTop="40dp"
        android:orientation="horizontal">


        <TextView
            android:id="@+id/back"
            android:layout_width="24.76dp"
            android:layout_height="24dp"
            android:layout_gravity="center_horizontal"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="40dp"
            android:background="@drawable/arrow"
            android:gravity="center"
            android:textAllCaps="false"
            android:textSize="16dp" />


        <TextView
            android:id="@+id/jadwal"
            android:layout_width="60dp"
            android:layout_height="24dp"
            android:layout_alignParentLeft="true"
            android:layout_alignParentTop="true"
            android:layout_marginLeft="130dp"

            android:gravity="center_horizontal|center_vertical"
            android:lineSpacingExtra="2sp"
            android:text="Jadwal"
            android:textColor="#0F172A"
            android:textSize="18sp" />
    </LinearLayout>

    <HorizontalScrollView
        android:id="@+id/hsv"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:fillViewport="true"
        android:measureAllChildren="false"
        android:scrollbars="none">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="28dp"
            android:orientation="horizontal">

            <Button
                android:id="@+id/button1"
                android:layout_width="wrap_content"
                android:layout_height="37dp"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="8dp"
                android:background="@drawable/border3"
                android:backgroundTint="@color/black"
                android:text="Senin"
                android:textColor="@color/white"
                android:textAllCaps="false"
                android:textSize="12dp" />

            <Button
                android:id="@+id/button2"
                android:layout_width="wrap_content"
                android:layout_height="37dp"
                android:layout_marginRight="8dp"
                android:background="@drawable/border3"
                android:text="Selasa"
                android:textAllCaps="false"
                android:textColor="#555555"
                android:textSize="12dp"
                app:backgroundTint="#F4F4F4" />

            <Button
                android:id="@+id/button3"
                android:layout_width="wrap_content"
                android:layout_height="37dp"
                android:layout_marginRight="8dp"
                android:background="@drawable/border3"
                android:text="Rabu"
                android:textAllCaps="false"
                android:textColor="#555555"
                android:textSize="12dp"
                app:backgroundTint="#F4F4F4" />

            <Button
                android:id="@+id/button4"
                android:layout_width="wrap_content"
                android:layout_height="37dp"
                android:layout_marginRight="8dp"
                android:background="@drawable/border3"
                android:text="Kamis"
                android:textAllCaps="false"
                android:textColor="#555555"
                android:textSize="12dp"
                app:backgroundTint="#F4F4F4" />
            <Button
                android:id="@+id/button5"
                android:layout_width="wrap_content"
                android:layout_height="37dp"
                android:layout_marginRight="8dp"
                android:background="@drawable/border3"
                android:text="Jumat"
                android:textAllCaps="false"
                android:textColor="#555555"
                android:textSize="12dp"
                app:backgroundTint="#F4F4F4" />
        </LinearLayout>
    </HorizontalScrollView>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="28dp"
        android:layout_marginTop="25dp"
        android:layout_marginRight="28dp"
        android:background="@drawable/card"
        android:orientation="vertical"
        android:padding="12dp"
        android:paddingTop="12dp"
        android:paddingBottom="12dp">


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="4dp"
            android:layout_marginBottom="4dp"
            android:gravity="center"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/textView13"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Praktikum Pengembangan Aplikasi Mobile" />

            <TextView
                android:id="@+id/textView15"
                android:layout_width="140dp"
                android:layout_height="25dp"
                android:layout_weight="1"
                android:background="@drawable/borderprodi"
                android:gravity="center"
                android:text="SIIO"
                android:textColor="#47B241" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="4dp"
            android:layout_marginBottom="4dp"
            android:gravity="center"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Lab ERP 2 (A.5.2)" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="25dp"
                android:layout_weight="1"
                android:gravity="right"
                android:text="08.00-12.40" />
        </LinearLayout>


    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="28dp"
        android:layout_marginTop="25dp"
        android:layout_marginRight="28dp"
        android:background="@drawable/card"
        android:orientation="vertical"
        android:padding="12dp"
        android:paddingTop="12dp"
        android:paddingBottom="12dp">


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="4dp"
            android:layout_marginBottom="4dp"
            android:gravity="center"
            android:orientation="horizontal">

            <TextView

                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Praktikum Pengembangan Aplikasi Mobile" />

            <TextView

                android:layout_width="140dp"
                android:layout_height="25dp"
                android:layout_weight="1"
                android:background="@drawable/borderprodi"
                android:gravity="center"
                android:text="SIIO"
                android:textColor="#47B241" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="4dp"
            android:layout_marginBottom="4dp"
            android:gravity="center"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Lab ERP 2 (A.5.2)" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="25dp"
                android:layout_weight="1"
                android:gravity="right"
                android:text="08.00-12.40" />
        </LinearLayout>


    </LinearLayout>

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="match_parent" />

</LinearLayout>