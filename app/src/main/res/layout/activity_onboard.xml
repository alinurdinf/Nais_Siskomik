<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:layout_marginTop="20dp"
    android:layout_marginRight="0dp"
    android:layout_marginLeft="0dp"
    android:gravity="left">


    <ImageView
        android:id="@+id/imageView"
        android:layout_width="wrap_content"
        android:layout_height="28dp"
        android:layout_marginTop="40dp"
        app:srcCompat="@drawable/ic_logo" />

    <TextView
        android:id="@+id/academic_in"
        android:layout_width="303dp"
        android:layout_height="150dp"
        android:layout_alignParentLeft="true"
        android:layout_marginLeft="23dp"
        android:layout_alignParentTop="true"
        android:layout_marginTop="20dp"
        android:text="Academic Information System"
        android:textColor="#090723"
        android:textSize="44sp"
        android:gravity="top"
        />
    <TextView
        android:id="@+id/text"
        android:layout_width="329dp"
        android:layout_height="84dp"
        android:layout_alignParentLeft="true"
        android:layout_marginLeft="23dp"
        android:layout_alignParentTop="true"
        android:layout_marginTop="20dp"
        android:text="Academic Information, a mobile-based Academic Information System developed to support academic activities that focus on academic activities on campus/university"
        android:textColor="#090723"
        android:textSize="14sp"
        android:gravity="top"
        />

    <Button
        android:id="@+id/button"
        android:layout_width="150dp"
        android:layout_height="40dp"
        android:text="Next"
        android:layout_marginLeft="20dp"
        android:background="@drawable/rounded2"
        android:backgroundTint="@color/black"
        android:textColor="@android:color/white"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginLeft="0dp"
        android:layout_marginTop="20dp"
        android:layout_marginRight="0dp"
        android:gravity="right"
        android:orientation="vertical">


        <ImageView
            android:id="@+id/imageView3"
            android:layout_width="336dp"
            android:layout_height="wrap_content"
            app:srcCompat="@drawable/gambar" />
    </LinearLayout>

</LinearLayout>