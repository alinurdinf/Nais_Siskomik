<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:background="#FFFFFF"    >


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/act"
                    android:layout_width="19dp"
                    android:layout_height="17dp"
                    android:layout_marginLeft="20dp"
                    android:layout_marginTop="40dp"
                    android:background="@drawable/arrow"
                    android:gravity="left"
                    android:textAllCaps="false"
                    android:textSize="16dp" />

                <TextView
                    android:layout_width="304dp"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="20dp"
                    android:layout_marginTop="40dp"
                    android:gravity="center"
                    android:text="Absensi"
                    android:textAllCaps="false"
                    android:textColor="#0F172A"
                    android:textSize="16dp"
                    android:textStyle="bold" />
            </LinearLayout>


                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:background="@drawable/border3"
                    android:layout_marginTop="20dp"
                    android:gravity="center"
                    android:orientation="horizontal">

                    <Button
                        android:id="@+id/bt_date"
                        style="?android:spinnerStyle"
                        android:layout_width="362dp"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:hint="Pilih tanggal"
                        android:paddingStart="18dp"
                        android:textColor="@color/black"
                        android:textSize="12dp" />
                </LinearLayout>



    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical" >
            <LinearLayout
                android:layout_width="362dp"
                android:layout_height="91dp"
                android:layout_gravity="center"
                android:layout_marginTop="20dp"
                android:background="@drawable/border3"
                android:backgroundTint="@color/white"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="362dp"
                    android:layout_height="92dp"
                    android:layout_gravity="center"
                    android:gravity="center"
                    android:background="@drawable/card"
                    android:orientation="vertical">

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:gravity="center"
                        android:orientation="horizontal">

                        <TextView
                            android:id="@+id/matkul1"
                            android:layout_width="295dp"
                            android:layout_height="36dp"
                            android:gravity="left"
                            android:text="Manajemen Proyek Sistem Informasi"
                            android:textColor="#1C1C1C"
                            android:textSize="14dp"
                            android:textStyle="bold" />

                        <TextView
                            android:id="@+id/kode1"
                            android:layout_width="24dp"
                            android:layout_height="24dp"
                            android:background="@drawable/check"
                            android:gravity="center"
                            android:textColor="#FFFFFF"
                            android:textSize="14dp"
                            android:textStyle="bold" />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_marginTop="10dp"
                        android:gravity="center"
                        android:orientation="horizontal">

                        <TextView
                            android:id="@+id/waktu1"
                            android:layout_width="195dp"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:gravity="left"
                            android:text="2022-09-28 09:33:00"
                            android:textColor="#DE555555"
                            android:textSize="12dp" />

                        <TextView
                            android:id="@+id/keterangan"
                            android:layout_width="123dp"
                            android:layout_height="match_parent"
                            android:layout_gravity="center"
                            android:gravity="right"
                            android:text="Hadir"
                            android:textColor="#DE555555"
                            android:textSize="12dp" />
                    </LinearLayout>
                </LinearLayout>


            </LinearLayout>

            <LinearLayout
                android:layout_width="362dp"
                android:layout_height="91dp"
                android:layout_gravity="center"
                android:layout_marginTop="20dp"
                android:background="@drawable/border3"
                android:backgroundTint="@color/white"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="362dp"
                    android:layout_height="92dp"
                    android:layout_gravity="center"
                    android:gravity="center"
                    android:background="@drawable/card"
                    android:orientation="vertical">

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:gravity="center"
                        android:orientation="horizontal">

                        <TextView
                            android:id="@+id/matkul2"
                            android:layout_width="295dp"
                            android:layout_height="36dp"
                            android:gravity="left"
                            android:text="Pratikum Manajemen Proyek Sistem Informasi"
                            android:textColor="#1C1C1C"
                            android:textSize="14dp"
                            android:textStyle="bold" />

                        <TextView
                            android:id="@+id/kode2"
                            android:layout_width="24dp"
                            android:layout_height="24dp"
                            android:layout_gravity="center"
                            android:background="@drawable/check"
                            android:gravity="center"
                            android:textColor="#FFFFFF"
                            android:textSize="14dp"
                            android:textStyle="bold" />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_marginTop="10dp"
                        android:gravity="center"
                        android:orientation="horizontal">

                        <TextView
                            android:id="@+id/waktu2"
                            android:layout_width="195dp"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:gravity="left"
                            android:text="2022-09-28 11:33:00"
                            android:textColor="#DE555555"
                            android:textSize="12dp" />

                        <TextView
                            android:id="@+id/keterangan2"
                            android:layout_width="123dp"
                            android:layout_height="match_parent"
                            android:layout_gravity="center"
                            android:gravity="right"
                            android:text="Hadir"
                            android:textColor="#DE555555"
                            android:textSize="12dp" />
                    </LinearLayout>
                </LinearLayout>
            </LinearLayout>

            <LinearLayout
                android:layout_width="362dp"
                android:layout_height="91dp"
                android:layout_gravity="center"
                android:layout_marginTop="20dp"
                android:background="@drawable/border3"
                android:backgroundTint="@color/white"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="362dp"
                    android:layout_height="92dp"
                    android:layout_gravity="center"
                    android:gravity="center"
                    android:background="@drawable/card"
                    android:orientation="vertical">

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:gravity="center"
                        android:orientation="horizontal">

                        <TextView
                            android:id="@+id/matkul3"
                            android:layout_width="295dp"
                            android:layout_height="36dp"
                            android:gravity="left"
                            android:text="Analisis dan Perancangan Sistem"
                            android:textColor="#1C1C1C"
                            android:textSize="14dp"
                            android:textStyle="bold" />

                        <TextView
                            android:id="@+id/kode3"
                            android:layout_width="24dp"
                            android:layout_height="24dp"
                            android:layout_gravity="center"
                            android:background="@drawable/cross"
                            android:gravity="center"
                            android:textColor="#FFFFFF"
                            android:textSize="14dp"
                            android:textStyle="bold" />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_marginTop="10dp"
                        android:gravity="center"
                        android:orientation="horizontal">

                        <TextView
                            android:id="@+id/waktu3"
                            android:layout_width="195dp"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:gravity="left"
                            android:text="2022-09-28 14:32:00"
                            android:textColor="#DE555555"
                            android:textSize="12dp" />

                        <TextView
                            android:id="@+id/keterangan3"
                            android:layout_width="123dp"
                            android:layout_height="match_parent"
                            android:layout_gravity="center"
                            android:gravity="right"
                            android:text="Tidak Hadir"
                            android:textColor="#DE555555"
                            android:textSize="12dp" />
                    </LinearLayout>
                </LinearLayout>



            </LinearLayout>

        </LinearLayout>
    </ScrollView>

</LinearLayout>
