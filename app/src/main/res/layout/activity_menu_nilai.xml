<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:background="#FBFBFD"    >

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="34dp"
        android:layout_marginTop="40dp"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/back"
            android:layout_width="24.76dp"
            android:layout_height="24dp"
            android:layout_gravity="center_horizontal"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="40dp"
            android:background="@drawable/arrow"
            android:gravity="center"
            android:textAllCaps="false"
            android:textSize="16dp" />


        <TextView
            android:id="@+id/nilai"
            android:layout_width="60dp"
            android:layout_height="24dp"
            android:layout_alignParentLeft="true"
            android:layout_alignParentTop="true"
            android:layout_marginLeft="130dp"

            android:gravity="center_horizontal|center_vertical"
            android:lineSpacingExtra="2sp"
            android:text="Nilai"
            android:textColor="#0F172A"
            android:textSize="18sp" />
    </LinearLayout>

    <HorizontalScrollView
        android:id="@+id/hsv"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:fillViewport="true"
        android:measureAllChildren="false"
        android:scrollbars="none">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="28dp"
            android:orientation="horizontal">

            <Button
                android:id="@+id/button1"
                android:layout_width="wrap_content"
                android:layout_height="37dp"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="8dp"
                android:background="@drawable/border3"
                android:backgroundTint="@color/black"
                android:text="Semester 1"
                android:textColor="@color/white"
                android:textAllCaps="false"
                android:textSize="12dp" />

            <Button
                android:id="@+id/button2"
                android:layout_width="wrap_content"
                android:layout_height="37dp"
                android:layout_marginRight="8dp"
                android:background="@drawable/border3"
                android:text="Semester 2"
                android:textAllCaps="false"
                android:textColor="#555555"
                android:textSize="12dp"
                app:backgroundTint="#F4F4F4" />

            <Button
                android:id="@+id/button3"
                android:layout_width="wrap_content"
                android:layout_height="37dp"
                android:layout_marginRight="8dp"
                android:background="@drawable/border3"
                android:text="Semester 3"
                android:textAllCaps="false"
                android:textColor="#555555"
                android:textSize="12dp"
                app:backgroundTint="#F4F4F4" />

            <Button
                android:id="@+id/button4"
                android:layout_width="wrap_content"
                android:layout_height="37dp"
                android:layout_marginRight="8dp"
                android:background="@drawable/border3"
                android:text="Semester 4"
                android:textAllCaps="false"
                android:textColor="#555555"
                android:textSize="12dp"
                app:backgroundTint="#F4F4F4" />
        </LinearLayout>
    </HorizontalScrollView>

    <LinearLayout
        android:layout_width="368dp"
        android:layout_height="42dp"
        android:layout_marginTop="25dp"
        android:background="@drawable/border3"
        android:layout_gravity="center"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/dln"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:layout_marginLeft="16dp"
                android:layout_marginTop="8dp"
                android:layout_marginRight="16dp"
                android:background="@drawable/search"
                android:textColor="#F64A4A"
                android:textSize="14dp" />

            <TextView
                android:id="@+id/waktu"
                android:layout_width="292dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="8dp"
                android:layout_marginTop="8dp"
                android:text="Search"
                android:textColor="#D8D8D8"
                android:textSize="12dp" />

        </LinearLayout>

    </LinearLayout>

    <LinearLayout
        android:layout_width="362dp"
        android:layout_height="116dp"
        android:layout_gravity="center"
        android:layout_marginTop="20dp"
        android:background="@drawable/card"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="362dp"
            android:layout_height="match_parent"
            android:layout_gravity="center"
            android:gravity="center"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:gravity="center"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/nama_matkul"
                    android:layout_width="295dp"
                    android:layout_height="36dp"
                    android:gravity="left"
                    android:text="Manajemen Proyek Sistem Informasi"
                    android:textColor="#1C1C1C"
                    android:textSize="14dp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/nilaiMatkul"
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:background="@drawable/border4"
                    android:gravity="center"
                    android:text="A"
                    android:textColor="#FFFFFF"
                    android:textSize="14dp"
                    android:textStyle="bold" />
            </LinearLayout>



            <LinearLayout
                android:layout_width="317dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginTop="10dp"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/semester"
                    android:layout_width="85dp"
                    android:layout_height="wrap_content"
                    android:gravity="left"
                    android:text="Ganjil"
                    android:textColor="#DE1C1C1C"
                    android:textSize="12dp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/sks"
                    android:layout_width="231dp"
                    android:layout_height="wrap_content"
                    android:gravity="right"
                    android:text="2 SKS"
                    android:textColor="#555555"
                    android:textSize="12dp"
                    android:textStyle="bold" />

            </LinearLayout>

        </LinearLayout>
    </LinearLayout>

</LinearLayout>